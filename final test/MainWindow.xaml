<Window x:Class="final_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:final_test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="299" Margin="435,110,0,0" VerticalAlignment="Top" Width="347">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Height="23" Margin="58,36,0,0" VerticalAlignment="Top" Width="280"/>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="323" Margin="10,86,0,0" VerticalAlignment="Top" Width="324">
            <TabItem Header="以教師分類課程">
                <TreeView x:Name="treeView" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="320" Margin="0,0,-2,-4"/>
            </TabItem>
            <TabItem Header="所有課程列表">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Label x:Name="label" Content="學生" HorizontalAlignment="Left" Height="32" Margin="10,36,0,0" VerticalAlignment="Top" Width="48" FontSize="16"/>
    </Grid>
</Window>
